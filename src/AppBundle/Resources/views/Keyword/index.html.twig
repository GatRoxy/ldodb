{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Keyword List</h1>
    <p class="count">
        Displaying {{ keywords|length }} keywords of {{ keywords.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('keyword_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('keyword_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Keyword</th>
                <th>Preferredkeyword</th>            </tr>
        </thead>
        <tbody>
        {% for keyword in keywords %}
            <tr>
                <td>
                    <a href="{{ path('keyword_show', { 'id': keyword.id }) }}">
                        {{ keyword.keyword }}
                    </a>
                </td>
                <td>{% if keyword.preferredKeyword %}Yes{% else %}No{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(keywords) }}
    </div>

{% endblock %}
