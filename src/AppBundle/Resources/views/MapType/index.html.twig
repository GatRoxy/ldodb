{% extends 'base.html.twig' %}

{% block title %}mapTypes{% endblock %}

{% block pageheader %
    <h1>MapType List</h1>
    <p class="count">
        Displaying {{ mapTypes|length }} mapTypes of {{ mapTypes.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('map_type_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('map_type_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Maptype</th>
                <th>Maptypenotes</th>            </tr>
        </thead>
        <tbody>
        {% for mapType in mapTypes %}
            <tr>
                <td>
                    <a href="{{ path('map_type_show', { 'id': mapType.id }) }}">
                        {{ mapType.mapType }}
                    </a>
                </td>
                <td>{{ mapType.mapTypeNotes }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(mapTypes) }}
    </div>

{% endblock %}
