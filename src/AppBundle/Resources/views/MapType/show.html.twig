{% extends 'base.html.twig' %}

{% block title %}MapType{% endblock %}

 {% block pageheader %} 
    <h1>MapType</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('map_type_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('map_type_edit', { 'id': mapType.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('map_type_delete', { 'id': mapType.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this MapType?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Map Type</th>
                <td>{{ mapType.mapType }}</td>
            </tr><tr>
                <th>Map Type Notes</th>
                <td>{{ mapType.mapTypeNotes }}</td>
            </tr>        
            <tr>
                <th>Books</th>         
                <td>
                    {% if mapType.books | length > 0 %}
                    <ul>
                        {% for books in mapType.books %}
                        <li>
                            <a href="{{ path("book_show", {"id":books.id}) }}">
                                {{ books }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
