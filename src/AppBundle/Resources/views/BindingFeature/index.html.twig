{% extends 'base.html.twig' %}

{% block title %}bindingFeatures{% endblock %}

{% block pageheader %
    <h1>BindingFeature List</h1>
    <p class="count">
        Displaying {{ bindingFeatures|length }} bindingFeatures of {{ bindingFeatures.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('binding_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('binding_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Bindingfeature</th>
                <th>Bindingfeaturenotes</th>            </tr>
        </thead>
        <tbody>
        {% for bindingFeature in bindingFeatures %}
            <tr>
                <td>
                    <a href="{{ path('binding_show', { 'id': bindingFeature.id }) }}">
                        {{ bindingFeature.bindingFeature }}
                    </a>
                </td>
                <td>{{ bindingFeature.bindingFeatureNotes }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(bindingFeatures) }}
    </div>

{% endblock %}
