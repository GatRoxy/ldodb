{% extends 'base.html.twig' %}

{% block title %}BindingFeature{% endblock %}

 {% block pageheader %} 
    <h1>BindingFeature</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('binding_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('binding_edit', { 'id': bindingFeature.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('binding_delete', { 'id': bindingFeature.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this BindingFeature?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Bindingfeature</th>
                <td>{{ bindingFeature.bindingFeature }}</td>
            </tr>
            <tr>
                <th>Bindingfeaturenotes</th>
                <td>{{ bindingFeature.bindingFeatureNotes }}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
