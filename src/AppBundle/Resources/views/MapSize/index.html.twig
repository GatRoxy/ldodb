{% extends 'base.html.twig' %}

{% block title %}mapSizes{% endblock %}

{% block pageheader %}
    <h1>MapSize List</h1>
    <p class="count">
        Displaying {{ mapSizes|length }} mapSizes of {{ mapSizes.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('map_size_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('map_size_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Map Size</th><th>Map Size Notes</th>            </tr>
        </thead>
        <tbody>
        {% for mapSize in mapSizes %}
            <tr>
                <td>
                    <a href="{{ path('map_size_show', { 'id': mapSize.id }) }}">
                        {{ mapSize.mapSize }}
                    </a>
                </td>
                <td>{{ mapSize.mapSizeNotes }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(mapSizes) }}
    </div>

{% endblock %}
