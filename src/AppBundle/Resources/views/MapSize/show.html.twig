{% extends 'base.html.twig' %}

{% block title %}MapSize{% endblock %}

 {% block pageheader %} 
    <h1>MapSize</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('map_size_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('map_size_edit', { 'id': mapSize.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('map_size_delete', { 'id': mapSize.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this MapSize?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Mapsize</th>
                <td>{{ mapSize.mapSize }}</td>
            </tr>
            <tr>
                <th>Mapsizenotes</th>
                <td>{{ mapSize.mapSizeNotes }}</td>
            </tr>        
            <tr>
                <th>Books</th>         
                <td>
                    {% if mapSize.books | length > 0 %}
                    <ul>
                        {% for books in mapSize.books %}
                        <li>
                            <a href="{{ path("book_show", {"id":books.id}) }}">
                                {{ books }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
