{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

 {% block pageheader %} 
    <h1>Task</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('task_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('task_delete', { 'id': task.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Task?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Task Name</th>
                <td>{{ task.taskName }}</td>
            </tr>        
        </tbody>
    </table>
    {% if task.contributions | length > 0 %}    
    <h2>Contributions</h2>
    <ul>
        {% for contributions in task.contributions %}
        <li>
            <a href="{{ path("contribution_show", {"id":contributions.id}) }}">
                {{ contributions }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
