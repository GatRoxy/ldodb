{% extends 'base.html.twig' %}

{% block title %}subjectHeadings{% endblock %}

{% block pageheader %}
    <h1>SubjectHeading List</h1>
    <p class="count">
        Displaying {{ subjectHeadings|length }} subjectHeadings of {{ subjectHeadings.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('subject_heading_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('subject_heading_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Subject Heading</th><th>Subject Heading Uri</th>            </tr>
        </thead>
        <tbody>
        {% for subjectHeading in subjectHeadings %}
            <tr>
                <td>
                    <a href="{{ path('subject_heading_show', { 'id': subjectHeading.id }) }}">
                        {{ subjectHeading.subjectHeading }}
                    </a>
                </td>
                <td>{{ subjectHeading.subjectHeadingUri }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(subjectHeadings) }}
    </div>

{% endblock %}
