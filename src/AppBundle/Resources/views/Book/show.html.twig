                                {{ plateTypes }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Maptypes</th>         
                <td>
                    {% if book.mapTypes | length > 0 %}
                    <ul>
                        {% for mapTypes in book.mapTypes %}
                        <li>
                            <a href="{{ path("mapTypes_show", {"id":mapTypes.id}) }}">
                                {{ mapTypes }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Subjects</th>         
                <td>
                    {% if book.subjects | length > 0 %}
                    <ul>
                        {% for subjects in book.subjects %}
                        <li>
                            <a href="{{ path("subjects_show", {"id":subjects.id}) }}">
                                {{ subjects }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Mapsizes</th>         
                <td>
                    {% if book.mapSizes | length > 0 %}
                    <ul>
                        {% for mapSizes in book.mapSizes %}
                        <li>
                            <a href="{{ path("mapSizes_show", {"id":mapSizes.id}) }}">
                                {{ mapSizes }}
