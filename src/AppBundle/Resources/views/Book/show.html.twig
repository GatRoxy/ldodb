                        {% for subjectHeadings in book.subjectHeadings %}
                        <li>
                            <a href="{{ path("subjectHeadings_show", {"id":subjectHeadings.id}) }}">
                                {{ subjectHeadings }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Bindingfeatures</th>         
                <td>
                    {% if book.bindingFeatures | length > 0 %}
                    <ul>
                        {% for bindingFeatures in book.bindingFeatures %}
                        <li>
                            <a href="{{ path("bindingFeatures_show", {"id":bindingFeatures.id}) }}">
                                {{ bindingFeatures }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Keywords</th>         
                <td>
                    {% if book.keywords | length > 0 %}
                    <ul>
                        {% for keywords in book.keywords %}
                        <li>
                            <a href="{{ path("keywords_show", {"id":keywords.id}) }}">
                                {{ keywords }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Digitalcopyholders</th>         
                <td>
                    {% if book.digitalCopyHolders | length > 0 %}
                    <ul>
                        {% for digitalCopyHolders in book.digitalCopyHolders %}
                        <li>
                            <a href="{{ path("digitalCopyHolders_show", {"id":digitalCopyHolders.id}) }}">
                                {{ digitalCopyHolders }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Publicationplaces</th>         
                <td>
                    {% if book.publicationPlaces | length > 0 %}
                    <ul>
                        {% for publicationPlaces in book.publicationPlaces %}
                        <li>
                            <a href="{{ path("publicationPlaces_show", {"id":publicationPlaces.id}) }}">
                                {{ publicationPlaces }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if book.otherNationalEditions | length > 0 %}    
    <h2>Othernationaleditions</h2>
    <ul>
        {% for otherNationalEditions in book.otherNationalEditions %}
        <li>
            <a href="{{ path("otherNationalEditions_show", {"id":otherNationalEditions.id}) }}">
                {{ otherNationalEditions }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if book.referencedPlaces | length > 0 %}    
    <h2>Referencedplaces</h2>
    <ul>
        {% for referencedPlaces in book.referencedPlaces %}
        <li>
            <a href="{{ path("referencedPlaces_show", {"id":referencedPlaces.id}) }}">
