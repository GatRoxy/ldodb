{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Book</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('book_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('book_edit', { 'id': book.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('book_delete', { 'id': book.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Book?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Filename</th>
                <td>{{ book.fileName }}</td>
            </tr>
            <tr>
                <th>Callnumber</th>
                <td>{{ book.callNumber }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Shorttitle</th>
                <td>{{ book.shortTitle }}</td>
            </tr>
            <tr>
                <th>Seriestitle</th>
                <td>{{ book.seriesTitle }}</td>
            </tr>
            <tr>
                <th>Titlepagequotation</th>
                <td>{{ book.titlePageQuotation }}</td>
            </tr>
            <tr>
                <th>Dedication</th>
                <td>{{ book.dedication }}</td>
            </tr>
            <tr>
                <th>Imprint</th>
                <td>{{ book.imprint }}</td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ book.edition }}</td>
            </tr>
            <tr>
                <th>Publicationdate</th>
                <td>{{ book.publicationDate }}</td>
            </tr>
            <tr>
                <th>Volumes</th>
                <td>{{ book.volumes }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ book.pages }}</td>
            </tr>
            <tr>
                <th>Copies</th>
                <td>{{ book.copies }}</td>
            </tr>
            <tr>
                <th>Sfucatorigbib</th>
                <td>{{ book.sfuCatOrigBib }}</td>
            </tr>
            <tr>
                <th>Originalbib</th>
                <td>{% if book.originalBib %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Bicknellnumber</th>
                <td>{{ book.bicknellNumber }}</td>
            </tr>
            <tr>
                <th>Healeynumber</th>
                <td>{{ book.healeyNumber }}</td>
            </tr>
            <tr>
                <th>Reednumber</th>
                <td>{{ book.reedNumber }}</td>
            </tr>
            <tr>
                <th>Publicdomain</th>
                <td>{% if book.publicDomain %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Britishedition</th>
                <td>{{ book.britishEdition }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ book.price }}</td>
            </tr>
            <tr>
                <th>Printrun</th>
                <td>{{ book.printRun }}</td>
            </tr>
            <tr>
                <th>Bookuri</th>
                <td>{{ book.bookUri }}</td>
            </tr>
            <tr>
                <th>Digitalobjecturl</th>
                <td>{{ book.digitalObjectUrl }}</td>
            </tr>
            <tr>
                <th>Bibliographicnotes</th>
                <td>{{ book.bibliographicNotes }}</td>
            </tr>
            <tr>
                <th>Criticalannotation</th>
                <td>{{ book.criticalAnnotation }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ book.format }}</td>
            </tr>
            <tr>
                <th>Platecount</th>
                <td>{{ book.plateCount }}</td>
            </tr>
            <tr>
                <th>Mapcount</th>
                <td>{{ book.mapCount }}</td>
            </tr>
            <tr>
                <th>Illustrations</th>
                <td>{{ book.illustrations }}</td>
            </tr>
            <tr>
                <th>Photographs</th>
                <td>{{ book.photographs }}</td>
            </tr>
            <tr>
                <th>Tables</th>
                <td>{% if book.tables %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Bindingcolour</th>
                <td>{{ book.bindingColour }}</td>
            </tr>        
            <tr>
                <th>Genres</th>         
                <td>
                    {% if book.genres | length > 0 %}
                    <ul>
                        {% for genres in book.genres %}
                        <li>
                            <a href="{{ path("genres_show", {"id":genres.id}) }}">
                                {{ genres }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Referencedpeople</th>         
                <td>
                    {% if book.referencedPeople | length > 0 %}
                    <ul>
                        {% for referencedPeople in book.referencedPeople %}
                        <li>
                            <a href="{{ path("referencedPeople_show", {"id":referencedPeople.id}) }}">
                                {{ referencedPeople }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Platetypes</th>         
