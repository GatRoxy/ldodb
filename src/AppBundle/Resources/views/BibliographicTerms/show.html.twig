{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>BibliographicTerms</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('bibliographic_term_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('bibliographic_term_edit', { 'id': bibliographicTerm.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('bibliographic_term_delete', { 'id': bibliographicTerm.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this BibliographicTerms?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Bibliographicterm</th>
            <td>{{ bibliographicTerm.bibliographicTerm }}</td>
            </tr>
            <tr>
                <th>Useforformat</th>
                <td>{% if bibliographicTerm.useForFormat %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Useforphotographs</th>
                <td>{% if bibliographicTerm.useForPhotographs %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Useforillustrations</th>
                <td>{% if bibliographicTerm.useForIllustrations %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
