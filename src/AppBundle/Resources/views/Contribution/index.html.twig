{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Contribution List</h1>
    <p class="count">
        Displaying {{ contributions|length }} contributions of {{ contributions.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('contribution_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('contribution_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Role</th>
                <th>Book</th>
                <th>Contributor</th>
            </tr>
        </thead>
        <tbody>
        {% for contribution in contributions %}
            <tr>
                <td><a href="{{ path('contribution_show', {'id': contribution.id }) }}">{{ contribution.id }}</a></td>
                <td>{{ contribution.task }}</td>
                <td>{{ contribution.book.title }}</td>
                <td>{{ contribution.entity }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(contributions) }}
    </div>

{% endblock %}
