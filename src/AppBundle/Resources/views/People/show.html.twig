{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>People</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('people_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('people_edit', { 'id': person.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('people_delete', { 'id': person.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this People?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Lastname</th>
            <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
            <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Otherlastname</th>
            <td>{{ person.otherLastName }}</td>
            </tr>
            <tr>
                <th>Otherfirstname</th>
            <td>{{ person.otherFirstName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
            <td>{{ person.birthDate }}</td>
            </tr>
            <tr>
                <th>Deathdate</th>
            <td>{{ person.deathDate }}</td>
            </tr>
            <tr>
                <th>Gender</th>
            <td>{{ person.gender }}</td>
            </tr>
            <tr>
                <th>Biographicalnotes</th>
            <td>{{ person.biographicalNotes }}</td>
            </tr>
            <tr>
                <th>Biographicalannotation</th>
            <td>{{ person.biographicalAnnotation }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
            <td>{{ person.nationality }}</td>
            </tr>
            <tr>
                <th>Peopleuri</th>
            <td>{{ person.peopleUri }}</td>
            </tr>
            <tr>
                <th>Residentinld</th>
                <td>{% if person.residentInLd %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Residentinlondon</th>
                <td>{% if person.residentInLondon %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Residentoutsideuk</th>
                <td>{% if person.residentOutsideUk %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Traveloutsideuk</th>
                <td>{% if person.travelOutsideUk %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
