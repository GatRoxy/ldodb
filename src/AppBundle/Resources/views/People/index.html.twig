{% extends 'base.html.twig' %}

{% block title %}People{% endblock %}

{% block pageheader %}
    <h1>People List</h1>
    <p class="count">
        Displaying {{ people|length }} people of {{ people.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('people_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('people_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Last Name</th><th>First Name</th><th>Other Last Name</th><th>Other First Name</th><th>Birth Date</th><th>Death Date</th><th>Gender</th><th>Biographical Notes</th><th>Biographical Annotation</th><th>Nationality</th><th>People URI</th><th>Resident In Lake District</th><th>Resident In London</th><th>Resident Outside UK</th><th>Travel Outside UK</th>            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('people_show', { 'id': person.id }) }}">
                        {{ person.lastName }}
                    </a>
                </td>
                <td>{{ person.firstName }}</td>
                <td>{{ person.otherLastName }}</td>
                <td>{{ person.otherFirstName }}</td>
                <td>{{ person.birthDate }}</td>
                <td>{{ person.deathDate }}</td>
                <td>{{ person.gender }}</td>
                <td>{{ person.biographicalNotes }}</td>
                <td>{{ person.biographicalAnnotation }}</td>
                <td>{{ person.nationality }}</td>
                <td>{{ person.peopleUri }}</td>
                <td>{% if person.residentInLd %}Yes{% else %}No{% endif %}</td>
                <td>{% if person.residentInLondon %}Yes{% else %}No{% endif %}</td>
                <td>{% if person.residentOutsideUk %}Yes{% else %}No{% endif %}</td>
                <td>{% if person.travelOutsideUk %}Yes{% else %}No{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(people) }}
    </div>

{% endblock %}
