{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Place</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('place_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('place_delete', { 'id': place.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Place?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Placename</th>
                <td>{{ place.placeName }}</td>
            </tr>
            <tr>
                <th>Placeuri</th>
                <td>{{ place.placeUri }}</td>
            </tr>
            <tr>
                <th>Inlakedistrict</th>
                <td>{% if place.inLakeDistrict %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ place.longitude }}</td>
            </tr>
            <tr>
                <th>Regionid</th>
                <td>{{ place.regionId }}</td>
            </tr>
            <tr>
                <th>Countryid</th>
                <td>{{ place.countryId }}</td>
            </tr>        
        </tbody>
    </table>
    {% if place.otherNationalEditions | length > 0 %}    
    <h2>Othernationaleditions</h2>
    <ul>
        {% for otherNationalEditions in place.otherNationalEditions %}
        <li>
            <a href="{{ path("otherNationalEditions_show", {"id":otherNationalEditions.id}) }}">
                {{ otherNationalEditions }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.referencedPlaces | length > 0 %}    
    <h2>Referencedplaces</h2>
    <ul>
        {% for referencedPlaces in place.referencedPlaces %}
        <li>
            {% if referencedPlaces.variantSpelling %}
                as <em>{{ referencedPlaces.variantSpelling }}</em>
            {% endif %}
                in {{ referencedPlaces.book }}.
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.peopleBorn | length > 0 %}    
    <h2>Peopleborn</h2>
    <ul>
        {% for peopleBorn in place.peopleBorn %}
        <li>
            <a href="{{ path("people_show", {"id":peopleBorn.id}) }}">
                {{ peopleBorn }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.peopleDied | length > 0 %}    
    <h2>Peopledied</h2>
    <ul>
        {% for peopleDied in place.peopleDied %}
        <li>
            <a href="{{ path("people_show", {"id":peopleDied.id}) }}">
                {{ peopleDied }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
