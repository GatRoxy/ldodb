{# @var string path #}
{% if q is not defined %}
    {% set q = '' %}
{% endif %}
{% if field is not defined %}
    {% set field = 'title' %}
{% endif %}

<div class='col-sm-12'>
    <fieldset>
        <div class='form-group'>
            <label class='col-sm-2 control-label' for='q'>Search Term</label>
            <div class='col-sm-2'>
                <select class='form-control col-sm-2' name='field'>
                    <option value='title' {% if field == 'title' %}selected='selected'{% endif %}>Title</option>
                    <option value='callNumber' {% if field == 'callNumber' %}selected='selected'{% endif %}>Call Number</option>
                </select>
            </div>
            <div class='col-sm-8'>
                <div class='input-group'>
                    <input type='text' name='q' id='q' class='form-control' value='{% if q != '*:*' %}{{ q }}{% endif %}'>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" id='btn-search' type="submit">
                            <span class='glyphicon glyphicon-search'></span>
                            Search
                        </button>
                        {% if q %}
                            <a class="btn btn-warning" href='{{ path(path) }}'>
                                <span class='glyphicon glyphicon-refresh'></span>
                                    Reset
                            </a>
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>
    </fieldset>
</div>
