<form method="get" action="{{ path(route) }}" class="form-horizontal">
    <fieldset>
        <legend>Search</legend>
        <div class='form-group'>
            <label class='col-sm-2 control-label' for='q'>{{ label|default('Search term') }}</label>
            <div class='col-sm-10'>
                <div class='input-group'>
                    <input type='text' name='q' id='q' class='form-control' value='{{ q|default('') }}'>
                    <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                </div>
            </div>
        </div>
    </fieldset>
</form>
